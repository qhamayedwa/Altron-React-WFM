  @@index([departmentId])
  @@index([isActive])
  @@map("leave_policies")
}

// ============================================
// APPROVAL WORKFLOWS
// ============================================

model ApprovalWorkflow {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
  name            String    @db.VarChar(100)
  entityType      String    @map("entity_type") @db.VarChar(50) // leave_request, time_entry, overtime, schedule_swap
  description     String?   @db.Text
  stepsConfig     String    @map("steps_config") @db.Text // JSON array of approval steps
  escalationRules String?   @map("escalation_rules") @db.Text // JSON escalation configuration
  isDefault       Boolean   @default(false) @map("is_default")
  isActive        Boolean   @default(true) @map("is_active")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  approvalInstances ApprovalInstance[]
  
  @@index([entityType])
  @@index([isActive])
  @@map("approval_workflows")
}

model ApprovalInstance {
  id                  Int       @id @default(autoincrement())
  workflowId          Int       @map("workflow_id")
  entityType          String    @map("entity_type") @db.VarChar(50)
  entityId            Int       @map("entity_id")
  requestedBy         Int       @map("requested_by")
  currentStep         Int       @default(1) @map("current_step")
  totalSteps          Int       @map("total_steps")
  status              String    @default("pending") @db.VarChar(20) // pending, in_progress, approved, rejected, cancelled
  startedAt           DateTime  @default(now()) @map("started_at")
  completedAt         DateTime? @map("completed_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  workflow            ApprovalWorkflow @relation(fields: [workflowId], references: [id])
  steps               ApprovalStep[]
  
  @@index([entityType, entityId])
  @@index([status])
  @@map("approval_instances")
}

model ApprovalStep {
  id                  Int       @id @default(autoincrement())
  instanceId          Int       @map("instance_id")
  stepNumber          Int       @map("step_number")
  approverType        String    @map("approver_type") @db.VarChar(30) // user, role, manager
  approverId          Int?      @map("approver_id") // user_id or role_id
  status              String    @default("pending") @db.VarChar(20) // pending, approved, rejected, skipped
  actionBy            Int?      @map("action_by")
  actionAt            DateTime? @map("action_at")
  comments            String?   @db.Text
  createdAt           DateTime  @default(now()) @map("created_at")
  
  // Relationships
  instance            ApprovalInstance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  
  @@index([instanceId])
  @@index([status])
  @@map("approval_steps")
}

