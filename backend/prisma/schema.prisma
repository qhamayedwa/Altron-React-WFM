model LeavePolicy {
  id                  Int       @id @default(autoincrement())
  tenantId            Int?      @map("tenant_id")
  name                String    @db.VarChar(100)
  leaveTypeId         Int       @map("leave_type_id")
  departmentId        Int?      @map("department_id") // null = applies to all
  employmentType      String?   @map("employment_type") @db.VarChar(30) // null = all types
  accrualRate         Float     @map("accrual_rate") // days per month
  accrualFrequency    String    @map("accrual_frequency") @db.VarChar(20) // monthly, annually, on_hire
  maxAccrual          Float     @map("max_accrual") // maximum days that can be accrued
  maxCarryOver        Float     @default(0) @map("max_carry_over") // days that can carry over
  carryOverExpiry     Int?      @map("carry_over_expiry_months") // months until carryover expires
  waitingPeriodDays   Int       @default(0) @map("waiting_period_days") // days before leave can be taken
  minServiceMonths    Int       @default(0) @map("min_service_months") // months of service required
  approvalLevels      Int       @default(1) @map("approval_levels") // number of approval levels
