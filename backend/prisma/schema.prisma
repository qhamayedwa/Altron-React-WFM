// ============================================
// COMPLIANCE & AUDIT
// ============================================

model ComplianceRule {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
  name            String    @db.VarChar(100)
  code            String    @unique @db.VarChar(30)
  ruleType        String    @map("rule_type") @db.VarChar(50) // max_hours, min_break, overtime_limit, late_arrival, early_departure
  description     String?   @db.Text
  condition       String    @db.Text // JSON condition definition
  threshold       Float?    // Threshold value for the rule
  thresholdUnit   String?   @map("threshold_unit") @db.VarChar(20) // hours, minutes, days, percentage
  severity        String    @default("warning") @db.VarChar(20) // info, warning, violation, critical
  autoResolve     Boolean   @default(false) @map("auto_resolve")
  notifyManager   Boolean   @default(true) @map("notify_manager")
  notifyEmployee  Boolean   @default(true) @map("notify_employee")
  isActive        Boolean   @default(true) @map("is_active")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  exceptions      Exception[]
  
  @@index([ruleType])
  @@index([isActive])
  @@map("compliance_rules")
}

model Exception {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  complianceRuleId Int      @map("compliance_rule_id")
  timeEntryId     Int?      @map("time_entry_id")
  scheduleId      Int?      @map("schedule_id")
  exceptionDate   DateTime  @map("exception_date") @db.Date
  exceptionType   String    @map("exception_type") @db.VarChar(50)
  description     String?   @db.Text
  severity        String    @default("warning") @db.VarChar(20)
  status          String    @default("open") @db.VarChar(20) // open, acknowledged, resolved, dismissed
  resolvedBy      Int?      @map("resolved_by")
  resolvedAt      DateTime? @map("resolved_at")
  resolution      String?   @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  complianceRule  ComplianceRule @relation(fields: [complianceRuleId], references: [id])
  
  @@index([userId, exceptionDate])
  @@index([complianceRuleId])
  @@index([status])
  @@map("exceptions")
}

model AuditLog {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
  userId          Int?      @map("user_id")
  sessionId       String?   @map("session_id") @db.VarChar(100)
  action          String    @db.VarChar(50) // create, update, delete, login, logout, approve, reject
  entityType      String    @map("entity_type") @db.VarChar(50) // user, time_entry, leave_request, schedule, etc.
  entityId        Int?      @map("entity_id")
  oldValue        String?   @map("old_value") @db.Text // JSON of previous state
  newValue        String?   @map("new_value") @db.Text // JSON of new state
  changedFields   String?   @map("changed_fields") @db.Text // JSON array of field names
  ipAddress       String?   @map("ip_address") @db.VarChar(45)
  userAgent       String?   @map("user_agent") @db.VarChar(500)
  metadata        String?   @db.Json // Additional context
  createdAt       DateTime  @default(now()) @map("created_at")
  
  @@index([userId, createdAt])
  @@index([entityType, entityId])
  @@index([action])
  @@index([createdAt(sort: Desc)])
  @@map("audit_logs")
}

