// Prisma schema for TimeLogic AI
// Database: PostgreSQL with multi-tenant support

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// MULTI-TENANT & ORGANIZATIONAL HIERARCHY
// ============================================

model Tenant {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(100)
  subdomain   String?  @unique @db.VarChar(50)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relationships
  companies   Company[]
  users       User[]
  
  @@map("tenants")
}

model Company {
  id              Int      @id @default(autoincrement())
  tenantId        Int      @map("tenant_id")
  name            String   @db.VarChar(100)
  registrationNo  String?  @map("registration_no") @db.VarChar(50)
  taxId           String?  @map("tax_id") @db.VarChar(50)
  addressLine1    String?  @map("address_line1") @db.VarChar(100)
  addressLine2    String?  @map("address_line2") @db.VarChar(100)
  city            String?  @db.VarChar(50)
  stateProvince   String?  @map("state_province") @db.VarChar(50)
  postalCode      String?  @map("postal_code") @db.VarChar(20)
  country         String?  @db.VarChar(50)
  phone           String?  @db.VarChar(20)
  email           String?  @db.VarChar(120)
  website         String?  @db.VarChar(255)
  logoUrl         String?  @map("logo_url") @db.VarChar(255)
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  // Relationships
  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  regions         Region[]
  
  @@unique([tenantId, name], name: "uq_tenant_company_name")
  @@index([tenantId])
  @@map("companies")
}

model Region {
  id          Int      @id @default(autoincrement())
  companyId   Int      @map("company_id")
  name        String   @db.VarChar(100)
  code        String?  @db.VarChar(20)
  description String?  @db.Text
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relationships
  company     Company  @relation(fields: [companyId], references: [id])
  sites       Site[]
  
  @@unique([companyId, name], name: "uq_company_region_name")
  @@index([companyId])
  @@map("regions")
}

model Site {
  id            Int      @id @default(autoincrement())
  regionId      Int      @map("region_id")
  name          String   @db.VarChar(100)
  code          String?  @db.VarChar(20)
  addressLine1  String?  @map("address_line1") @db.VarChar(100)
  addressLine2  String?  @map("address_line2") @db.VarChar(100)
  city          String?  @db.VarChar(50)
  stateProvince String?  @map("state_province") @db.VarChar(50)
  postalCode    String?  @map("postal_code") @db.VarChar(20)
  country       String?  @db.VarChar(50)
  latitude      Float?
  longitude     Float?
  phone         String?  @db.VarChar(20)
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  // Relationships
  region        Region      @relation(fields: [regionId], references: [id])
  departments   Department[]
  
  @@unique([regionId, name], name: "uq_region_site_name")
  @@index([regionId])
  @@map("sites")
}

model Department {
  id          Int      @id @default(autoincrement())
  siteId      Int      @map("site_id")
  name        String   @db.VarChar(100)
  code        String?  @db.VarChar(20)
  managerId   Int?     @map("manager_id")
  description String?  @db.Text
  costCenter  String?  @map("cost_center") @db.VarChar(50)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relationships
  site        Site     @relation(fields: [siteId], references: [id])
  manager     User?    @relation("DepartmentManager", fields: [managerId], references: [id])
  users       User[]   @relation("UserDepartment")
  
  @@unique([siteId, name], name: "uq_site_department_name")
  @@index([siteId])
  @@index([managerId])
  @@map("departments")
}

// ============================================
// USER MANAGEMENT & AUTHENTICATION
// ============================================

model User {
  id                        Int       @id @default(autoincrement())
  tenantId                  Int       @map("tenant_id")
  username                  String    @db.VarChar(64)
  email                     String    @db.VarChar(120)
  passwordHash              String    @map("password_hash") @db.VarChar(256)
  firstName                 String?   @map("first_name") @db.VarChar(64)
  lastName                  String?   @map("last_name") @db.VarChar(64)
  employeeNumber            String?   @map("employee_number") @db.VarChar(20)
  departmentId              Int?      @map("department_id")
  jobId                     Int?      @map("job_id")
  managerId                 Int?      @map("manager_id")
  hireDate                  DateTime? @map("hire_date") @db.Date
  terminationDate           DateTime? @map("termination_date") @db.Date
  employmentType            String    @default("full_time") @map("employment_type") @db.VarChar(20)
  employmentStatus          String    @default("active") @map("employment_status") @db.VarChar(20)
  workSchedule              String?   @map("work_schedule") @db.VarChar(50)
  standardHoursPerWeek      Float?    @map("standard_hours_per_week")
  phone                     String?   @db.VarChar(20)
  emergencyContactName      String?   @map("emergency_contact_name") @db.VarChar(100)
  emergencyContactPhone     String?   @map("emergency_contact_phone") @db.VarChar(20)
  emergencyContactRelation  String?   @map("emergency_contact_relationship") @db.VarChar(50)
  addressLine1              String?   @map("address_line1") @db.VarChar(100)
  addressLine2              String?   @map("address_line2") @db.VarChar(100)
  city                      String?   @db.VarChar(50)
  stateProvince             String?   @map("state_province") @db.VarChar(50)
  postalCode                String?   @map("postal_code") @db.VarChar(20)
  country                   String?   @db.VarChar(50)
  dateOfBirth               DateTime? @map("date_of_birth") @db.Date
  gender                    String?   @db.VarChar(20)
  nationality               String?   @db.VarChar(50)
  idNumber                  String?   @map("id_number") @db.VarChar(50)
  passportNumber            String?   @map("passport_number") @db.VarChar(50)
  hourlyRate                Float?    @map("hourly_rate")
  annualSalary              Float?    @map("annual_salary")
  payFrequency              String?   @map("pay_frequency") @db.VarChar(20)
  bankName                  String?   @map("bank_name") @db.VarChar(100)
  bankAccountNumber         String?   @map("bank_account_number") @db.VarChar(50)
  bankBranchCode            String?   @map("bank_branch_code") @db.VarChar(20)
  taxId                     String?   @map("tax_id") @db.VarChar(50)
  profilePictureUrl         String?   @map("profile_picture_url") @db.VarChar(255)
  isActive                  Boolean   @default(true) @map("is_active")
  lastLogin                 DateTime? @map("last_login")
  createdAt                 DateTime  @default(now()) @map("created_at")
  updatedAt                 DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  tenant                    Tenant       @relation(fields: [tenantId], references: [id])
  department                Department?  @relation("UserDepartment", fields: [departmentId], references: [id])
  job                       Job?         @relation(fields: [jobId], references: [id])
  manager                   User?        @relation("UserManager", fields: [managerId], references: [id])
  directReports             User[]       @relation("UserManager")
  managedDepartments        Department[] @relation("DepartmentManager")
  roles                     UserRole[]
  timeEntries               TimeEntry[]
  leaveRequests             LeaveRequest[]
  schedules                 Schedule[]
  notifications             Notification[]
  
  @@unique([tenantId, username], name: "uq_tenant_username")
  @@unique([tenantId, email], name: "uq_tenant_email")
  @@index([tenantId])
  @@index([departmentId])
  @@index([managerId])
  @@index([employeeNumber])
  @@index([isActive])
  @@index([firstName, lastName])
  @@map("users")
}

model Role {
  id          Int        @id @default(autoincrement())
  name        String     @unique @db.VarChar(64)
  description String?    @db.VarChar(255)
  createdAt   DateTime   @default(now()) @map("created_at")
  
  // Relationships
  users       UserRole[]
  
  @@map("roles")
}

model UserRole {
  userId    Int      @map("user_id")
  roleId    Int      @map("role_id")
  
  // Relationships
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  
  @@id([userId, roleId])
  @@map("user_roles")
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(100)
  code        String?  @unique @db.VarChar(20)
  description String?  @db.Text
  level       String?  @db.VarChar(50)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relationships
  users       User[]
  
  @@map("jobs")
}

// ============================================
// TIME & ATTENDANCE
// ============================================

model TimeEntry {
  id                Int       @id @default(autoincrement())
  userId            Int       @map("user_id")
  departmentId      Int?      @map("department_id")
  clockInTime       DateTime  @map("clock_in_time")
  clockOutTime      DateTime? @map("clock_out_time")
  clockInLatitude   Float?    @map("clock_in_latitude")
  clockInLongitude  Float?    @map("clock_in_longitude")
  clockOutLatitude  Float?    @map("clock_out_latitude")
  clockOutLongitude Float?    @map("clock_out_longitude")
  clockInDeviceId   Int?      @map("clock_in_device_id")
  clockOutDeviceId  Int?      @map("clock_out_device_id")
  clockInGeofenceId Int?      @map("clock_in_geofence_id")
  geofenceStatus    String?   @map("geofence_status") @db.VarChar(20) // inside, outside, unknown
  breakMinutes      Int       @default(0) @map("break_minutes")
  totalHours        Float?    @map("total_hours")
  status            String    @default("clocked_in") @db.VarChar(20)
  approvedBy        Int?      @map("approved_by")
  approvedAt        DateTime? @map("approved_at")
  exceptionFlag     Boolean   @default(false) @map("exception_flag")
  complianceStatus  String?   @map("compliance_status") @db.VarChar(20) // compliant, warning, violation
  notes             String?   @db.Text
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  user            User      @relation(fields: [userId], references: [id])
  
  @@index([userId, clockInTime(sort: Desc)])
  @@index([userId, status])
  @@index([departmentId])
  @@index([status])
  @@index([exceptionFlag])
  @@map("time_entries")
}

// ============================================
// LEAVE MANAGEMENT
// ============================================

model LeaveType {
  id              Int            @id @default(autoincrement())
  name            String         @db.VarChar(100)
  code            String         @unique @db.VarChar(20)
  description     String?        @db.Text
  accrualRate     Float?         @map("accrual_rate")
  maxDaysPerYear  Float?         @map("max_days_per_year")
  carryOverDays   Float?         @map("carry_over_days")
  isPaid          Boolean        @default(true) @map("is_paid")
  requiresApproval Boolean       @default(true) @map("requires_approval")
  isActive        Boolean        @default(true) @map("is_active")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")
  
  // Relationships
  leaveRequests   LeaveRequest[]
  leaveBalances   LeaveBalance[]
  leavePolicies   LeavePolicy[]
  
  @@map("leave_types")
}

model LeaveRequest {
  id            Int       @id @default(autoincrement())
  userId        Int       @map("user_id")
  leaveTypeId   Int       @map("leave_type_id")
  startDate     DateTime  @map("start_date") @db.Date
  endDate       DateTime  @map("end_date") @db.Date
  days          Float
  reason        String?   @db.Text
  status        String    @default("pending") @db.VarChar(20)
  approvedBy    Int?      @map("approved_by")
  approvedAt    DateTime? @map("approved_at")
  rejectionReason String? @map("rejection_reason") @db.Text
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  user          User      @relation(fields: [userId], references: [id])
  leaveType     LeaveType @relation(fields: [leaveTypeId], references: [id])
  
  @@index([userId, startDate])
  @@index([status])
  @@map("leave_requests")
}

model LeaveBalance {
  id            Int       @id @default(autoincrement())
  userId        Int       @map("user_id")
  leaveTypeId   Int       @map("leave_type_id")
  year          Int
  totalDays     Float     @map("total_days")
  usedDays      Float     @default(0) @map("used_days")
  remainingDays Float     @map("remaining_days")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  leaveType     LeaveType @relation(fields: [leaveTypeId], references: [id])
  
  @@unique([userId, leaveTypeId, year])
  @@map("leave_balances")
}

// ============================================
// SCHEDULING
// ============================================

model ShiftType {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(100)
  code        String     @unique @db.VarChar(20)
  startTime   String     @map("start_time") @db.VarChar(5)
  endTime     String     @map("end_time") @db.VarChar(5)
  duration    Float
  color       String?    @db.VarChar(7)
  isActive    Boolean    @default(true) @map("is_active")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  
  // Relationships
  schedules   Schedule[]
  
  @@map("shift_types")
}

model Schedule {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  shiftTypeId     Int       @map("shift_type_id")
  date            DateTime  @db.Date
  startTime       DateTime  @map("start_time")
  endTime         DateTime  @map("end_time")
  status          String    @default("scheduled") @db.VarChar(20)
  isOpenShift     Boolean   @default(false) @map("is_open_shift")
  swapStatus      String?   @map("swap_status") @db.VarChar(20) // null, requested, approved, rejected
  swapRequestedBy Int?      @map("swap_requested_by")
  swapRequestedTo Int?      @map("swap_requested_to")
  swapApprovedBy  Int?      @map("swap_approved_by")
  swapApprovedAt  DateTime? @map("swap_approved_at")
  originalUserId  Int?      @map("original_user_id") // for tracking swaps
  notes           String?   @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  user        User      @relation(fields: [userId], references: [id])
  shiftType   ShiftType @relation(fields: [shiftTypeId], references: [id])
  
  @@index([userId, date])
  @@index([date])
  @@index([isOpenShift])
  @@index([swapStatus])
  @@map("schedules")
}

// ============================================
// PAYROLL
// ============================================

model PayRule {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(100)
  code        String   @unique @db.VarChar(20)
  ruleType    String   @map("rule_type") @db.VarChar(50)
  description String?  @db.Text
  priority    Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  config      String   @db.Json
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("pay_rules")
}

model PayCode {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
  code            String    @unique @db.VarChar(20)
  name            String    @db.VarChar(100)
  description     String?   @db.Text
  codeType        String    @map("code_type") @db.VarChar(30) // earning, deduction, allowance, bonus
  category        String?   @db.VarChar(50) // regular, overtime, leave, bonus, deduction
  multiplier      Float     @default(1.0)
  isTaxable       Boolean   @default(true) @map("is_taxable")
  isActive        Boolean   @default(true) @map("is_active")
  glAccountCode   String?   @map("gl_account_code") @db.VarChar(50)
  sageVipCode     String?   @map("sage_vip_code") @db.VarChar(50)
  displayOrder    Int       @default(0) @map("display_order")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  timesheetLines  TimesheetLine[]
  overtimeEntries OvertimeEntry[]
  
  @@index([codeType])
  @@index([isActive])
  @@map("pay_codes")
}

model Timesheet {
  id              Int       @id @default(autoincrement())
  userId          Int       @map("user_id")
  periodStart     DateTime  @map("period_start") @db.Date
  periodEnd       DateTime  @map("period_end") @db.Date
  totalHours      Float     @default(0) @map("total_hours")
  regularHours    Float     @default(0) @map("regular_hours")
  overtimeHours   Float     @default(0) @map("overtime_hours")
  doubleTimeHours Float     @default(0) @map("double_time_hours")
  leaveHours      Float     @default(0) @map("leave_hours")
  status          String    @default("draft") @db.VarChar(20) // draft, submitted, approved, rejected, processed
  submittedAt     DateTime? @map("submitted_at")
  approvedBy      Int?      @map("approved_by")
  approvedAt      DateTime? @map("approved_at")
  notes           String?   @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  lines           TimesheetLine[]
  
  @@unique([userId, periodStart, periodEnd])
  @@index([userId, periodStart])
  @@index([status])
  @@map("timesheets")
}

model TimesheetLine {
  id            Int       @id @default(autoincrement())
  timesheetId   Int       @map("timesheet_id")
  payCodeId     Int       @map("pay_code_id")
  date          DateTime  @db.Date
  hours         Float
  rate          Float?
  amount        Float?
  notes         String?   @db.Text
  createdAt     DateTime  @default(now()) @map("created_at")
  
  // Relationships
  timesheet     Timesheet @relation(fields: [timesheetId], references: [id], onDelete: Cascade)
  payCode       PayCode   @relation(fields: [payCodeId], references: [id])
  
  @@index([timesheetId])
  @@index([payCodeId])
  @@map("timesheet_lines")
}

model OvertimeEntry {
  id            Int       @id @default(autoincrement())
  userId        Int       @map("user_id")
  timeEntryId   Int?      @map("time_entry_id")
  payCodeId     Int       @map("pay_code_id")
  date          DateTime  @db.Date
  hours         Float
  multiplier    Float     @default(1.5)
  reason        String?   @db.Text
  status        String    @default("pending") @db.VarChar(20) // pending, approved, rejected
  approvedBy    Int?      @map("approved_by")
  approvedAt    DateTime? @map("approved_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relationships
  payCode       PayCode   @relation(fields: [payCodeId], references: [id])
  
  @@index([userId, date])
  @@index([status])
  @@map("overtime_entries")
}

model PayrollExportBatch {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
  batchNumber     String    @unique @map("batch_number") @db.VarChar(50)
  periodStart     DateTime  @map("period_start") @db.Date
  periodEnd       DateTime  @map("period_end") @db.Date
  exportType      String    @map("export_type") @db.VarChar(30) // sage_vip, csv, excel
  status          String    @default("pending") @db.VarChar(20) // pending, processing, completed, failed
  employeeCount   Int       @default(0) @map("employee_count")
  totalAmount     Float     @default(0) @map("total_amount")
  filePath        String?   @map("file_path") @db.VarChar(500)
  exportedBy      Int       @map("exported_by")
  exportedAt      DateTime? @map("exported_at")
  errorMessage    String?   @map("error_message") @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  @@index([periodStart, periodEnd])
  @@index([status])
  @@map("payroll_export_batches")
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id          Int       @id @default(autoincrement())
  userId      Int       @map("user_id")
  type        String    @db.VarChar(50)
  title       String    @db.VarChar(200)
  message     String    @db.Text
  priority    String    @default("medium") @db.VarChar(20)
  isRead      Boolean   @default(false) @map("is_read")
  actionUrl   String?   @map("action_url") @db.VarChar(255)
  actionText  String?   @map("action_text") @db.VarChar(100)
  expiresAt   DateTime? @map("expires_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  
  // Relationships
  user        User      @relation(fields: [userId], references: [id])
  
  @@index([userId, isRead])
  @@index([createdAt(sort: Desc)])
  @@map("notifications")
}

// ============================================
// HOLIDAYS & CALENDAR
// ============================================

model Holiday {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
  name            String    @db.VarChar(100)
  date            DateTime  @db.Date
  holidayType     String    @map("holiday_type") @db.VarChar(30) // public, company, regional
  isRecurring     Boolean   @default(false) @map("is_recurring")
  recurringDay    Int?      @map("recurring_day") // 1-31
  recurringMonth  Int?      @map("recurring_month") // 1-12
  appliesToAll    Boolean   @default(true) @map("applies_to_all")
  departmentIds   String?   @map("department_ids") @db.Text // JSON array of department IDs
  isPaid          Boolean   @default(true) @map("is_paid")
  description     String?   @db.Text
  isActive        Boolean   @default(true) @map("is_active")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  @@index([date])
  @@index([holidayType])
  @@map("holidays")
}

model Announcement {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
  title           String    @db.VarChar(200)
  content         String    @db.Text
  priority        String    @default("normal") @db.VarChar(20) // low, normal, high, urgent
  targetAudience  String    @default("all") @map("target_audience") @db.VarChar(50) // all, department, role
  targetIds       String?   @map("target_ids") @db.Text // JSON array of target IDs
  publishedAt     DateTime? @map("published_at")
  expiresAt       DateTime? @map("expires_at")
  isPinned        Boolean   @default(false) @map("is_pinned")
  createdBy       Int       @map("created_by")
  isActive        Boolean   @default(true) @map("is_active")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  @@index([publishedAt])
  @@index([isActive])
  @@map("announcements")
}

// ============================================
// DEVICES & GEOFENCING
// ============================================

model Device {
  id              Int       @id @default(autoincrement())
  tenantId        Int?      @map("tenant_id")
